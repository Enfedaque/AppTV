<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.videos">

    <LinearLayout
        android:id="@+id/videosLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/videoPrincipal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="40" />

        <TextView
            android:id="@+id/tituloPrincipal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:layout_weight="7"
            android:text="titulo"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2022-03-14"
                android:textAlignment="center"
                android:textColor="#73C1EC"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/generoPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="populairty"
                android:textAlignment="center"
                android:textColor="#73C1EC"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/overviewPrincipal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="35"
            android:text="TextView"
            android:textColor="#C1E3F6"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="100dp"
            android:backgroundTint="#9A8B8B"
            android:drawableLeft="@drawable/google_maps"
            android:onClick="abrirMapaCine"
            android:text="Ir al cine"
            app:iconTintMode="add" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>